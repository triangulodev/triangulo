---
import { Image } from "astro:assets";
import trianguloLogo from "./triangulo-logo.svg?url";
import trianguloLogoWhite from "./triangulo-logo-white.svg?url";
---

<header role="banner" class="header">
  <div class="header-logo">
    <a href="/" title="Voltar para página principal">
      <picture>
        <source
          srcset={trianguloLogoWhite}
          media="(prefers-color-scheme: dark)"
        />
        <img src={trianguloLogo} alt="Triângulo" />
      </picture>
    </a>
  </div>
</header>
